# Variables de Entorno para DysaEats
# Copiar este archivo a .env y modificar los valores según sea necesario

# Entorno de la aplicación
NODE_ENV=development

# Base de datos
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=dysaeats

# JWT (Autenticación)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1d

# URLs de servicio
DASHBOARD_WEB_URL=http://localhost:3001
DASHBOARD_MOBILE_URL=http://localhost:19000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# URLs públicas (para el frontend)
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3000